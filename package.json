{
  "name": "stt-pz-4",
  "version": "1.0.0",
  "description": "BDD testing with Jest - Calculator",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "dev": "webpack-dev-server --progress=profile --color --port 8081",
    "prod": "webpack --config webpack.production.config.js"
  },
  "author": "DOMASHOV D.V.",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@types/jest": "^29.5.14",
    "babel-loader": "^8.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.1.2",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.4.1",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "jest": {
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": [
    "<rootDir>"
  ],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/*.spec.{ts,tsx}",
    "!**/*.test.{ts,tsx}",
    "!**/node_modules/**",
    "!**/index.ts/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "verbose": true
}
}